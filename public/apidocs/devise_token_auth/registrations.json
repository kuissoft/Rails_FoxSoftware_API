{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "http://localhost:3000/",
  "resourcePath": "registrations",
  "apis": [
    {
      "path": "auth.json",
      "operations": [
        {
          "summary": "Create user with email",
          "notes": "When invited by user(url with query string <strong>invitation=</strong>, we will find and assign all shipment invitations by email, so later you can load them from <strong>my_invitations</strong> query",
          "parameters": [
            {
              "paramType": "form",
              "name": "first_name",
              "type": "string",
              "description": "First Name",
              "required": true
            },
            {
              "paramType": "form",
              "name": "last_name",
              "type": "string",
              "description": "Last Name",
              "required": true
            },
            {
              "paramType": "form",
              "name": "email",
              "type": "string",
              "description": "Email",
              "required": true
            },
            {
              "paramType": "form",
              "name": "password",
              "type": "string",
              "description": "Password",
              "required": true
            },
            {
              "paramType": "form",
              "name": "password_confirmation",
              "type": "string",
              "description": "Password confirmation",
              "required": true
            },
            {
              "paramType": "form",
              "name": "about",
              "type": "string",
              "description": "About me",
              "required": false
            },
            {
              "paramType": "form",
              "name": "user_type",
              "type": "string",
              "description": "User type, 'carrier' or 'client'",
              "required": true
            },
            {
              "paramType": "form",
              "name": "invitation",
              "type": "string",
              "description": "Invitation code, pass from query string if available. IF invitation present and valid then new user will be assigned with carrier role regardless of user_type field",
              "required": false
            }
          ],
          "responseMessages": [
            {
              "code": "not_valid",
              "responseModel": null,
              "message": null
            },
            {
              "code": "ok",
              "responseModel": "User",
              "message": "Success"
            }
          ],
          "method": "post",
          "nickname": "DeviseTokenAuth::Registrations#create"
        }
      ]
    }
  ]
}